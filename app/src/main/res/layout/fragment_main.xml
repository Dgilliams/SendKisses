<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.damosdesigns.sendkisses.MainActivityFragment"
    tools:showIn="@layout/activity_main">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true">

        <RelativeLayout
            android:id="@+id/recipient_container"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_margin="16dp">

            <ImageView
                android:id="@+id/recipient_image_background"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:src="@drawable/heart" />

            <ImageView
                android:id="@+id/recipient_image_foreground"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:elevation="8dp"
                android:src="@drawable/heart" />

            <ImageView
                android:id="@+id/plus_icon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:elevation="8dp"
                android:padding="40dp"
                android:src="@drawable/ic_add_24dp"
                android:tint="@color/md_white_1000" />

            <TextView
                android:id="@+id/kiss_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:elevation="8dp"
                android:text="0 Kisses Sent"
                android:textAlignment="center"
                android:textColor="@color/md_white_1000"
                android:textSize="32sp"
                android:visibility="invisible" />

        </RelativeLayout>

        <TextView
            android:id="@+id/recipient_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/recipient_container"
            android:layout_centerVertical="true"
            android:layout_marginTop="24dp"
            android:text=""
            android:textSize="20sp"
            android:textAlignment="center"
            android:textColor="@color/md_white_1000"
            tools:text="My Lindsey" />

        <TextView
            android:id="@+id/input_phone_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/recipient_name"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="8dp"
            android:textAlignment="center"
            android:textColor="@color/md_white_1000"
            android:textColorHint="@color/md_white_1000"
            tools:text="772-713-1983" />

        <ImageView
            android:id="@+id/kiss_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_below="@id/input_phone_number"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp"
            android:src="@drawable/kiss_emoji" />

    </RelativeLayout>
</RelativeLayout>
